service:
  cluster: "default"
  service: "ping2googledns"
  task_definition: <%= "ping2googledns:#{ENV['TASK_DEF_REVISION']}" %>
  desired_count: 0
  placement_strategy:
    - type: "spread"
      field: "attribute:ecs.availability-zone"
  placement_constraints:
    - type: "distinctInstance"
hooks:
  before_create:
    - echo before create
  after_create:
    - echo after create
  before_update:
    - echo before update
  after_update:
    - echo after update
